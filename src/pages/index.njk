{% extends "base.njk" %}
{% set page = { name: "Home", title: "Homepage title"} %}

{% block content %}
{% include "header.njk" %}
<div class="container mx-auto">
    <div class="flex flex-col items-center justify-center text-center p-16">
        <img src="{% static "nunja@2x.png" %}" alt="" class="w-64 h-auto m-2">

        <p class="text-slate-500 text-xl font-semibold mb-6">Static website creator using Webpack, Nunjucks, AlpineJs, TailwindCSS</p>
        <div x-data="{ open: false }" class="w-full">
            <button @click="open = ! open" class="border border-slate-200 text-slate-400 rounded-lg py-3 px-6 mb-4">Expand</button>
 
            <span x-show="open" class="block border-2 border-slate-200 p-16 w-full rounded-xl bg-slate-100">
                Yo AlineJS !!
            </span>
        </div>
    </div>
</div>
{% endblock %}
